@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="CreateCategory">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Kategori Adı</label>
                                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı">
                            </div>
                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
