@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkanlar Listesi </div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık1</th>
                                    <th>Açıklama1</th>
                                    <th>Başlık2</th>
                                    <th>Açıklama2</th>
                                    <th>Başlık3</th>
                                    <th>Açıklama3</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title1</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Title2</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Title3</td>
                                        <td>@item.Description3</td>
                                        <td> <a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                        <td> <a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature" class="btn btn-outline-success">Yeni Öne Çıkan Oluştur</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

