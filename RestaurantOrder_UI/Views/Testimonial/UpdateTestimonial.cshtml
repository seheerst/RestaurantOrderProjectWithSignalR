@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="UpdateTestimonial">
                    <input type="hidden" asp-for="TestimonialID" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referansı Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Ünvan</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Yorum</label>
                                <input type="text" class="form-control" asp-for="Comment">
                            </div>
                            <div class="form-group">
                                <label>Resim</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>


                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

