@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="CreateSocialMedia">
                    <input type="hidden" asp-for="SocilMediaID"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Sosyal Medya Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Bağlantı Linki</label>
                                <input type="text" class="form-control" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control" asp-for="Icon">
                            </div>

                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

