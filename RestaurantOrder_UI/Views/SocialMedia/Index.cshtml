@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi </div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Bağlantı Linki</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td> <a href="/SocialMedia/DeleteSocialMedia/@item.SocilMediaID" class="btn btn-outline-danger">Sil</a></td>
                                        <td> <a href="/SocialMedia/UpdateSocialMedia/@item.SocilMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-success">Yeni Sosyal Medya Oluştur</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

