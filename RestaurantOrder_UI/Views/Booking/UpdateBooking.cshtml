@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="UpdateBooking">
                    <input type="hidden" asp-for="BookingID"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label>Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail">
                            </div>
                            <div class="form-group">
                                <label>Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount">
                            </div>
                            <div class="form-group">
                                <label>Rezervasyon Günü</label>
                                <input type="datetime-local" class="form-control" asp-for="Date">
                            </div>
                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


