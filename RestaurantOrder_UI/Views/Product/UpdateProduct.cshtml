@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="CreateProduct">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input  type="hidden" asp-for="ProductID"/>
                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName">
                            </div>
                            <div class="form-group">
                                <label>Ürün Fiyati</label>
                                <input type="text" class="form-control" asp-for="Price">
                            </div>
                            <div class="form-group">
                                <label>Ürün Bilgisi</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label>Ürün Resmi</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label>Ürün Categorisi</label>
                                @Html.DropDownListFor(x=> x.CategoryID,(List<SelectListItem>)ViewBag.Categories,new {@class = "form-control"})

                            </div>
                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

