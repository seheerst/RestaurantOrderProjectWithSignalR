@model List<ResultTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listesi </div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İsim</th>
                                    <th>Status</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Status</td>
                                        <td> <a href="/Table/DeleteTable/@item.TableID" class="btn btn-outline-danger">Sil</a></td>
                                        <td> <a href="/Table/UpdateTable/@item.TableID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Table/CreateTable" class="btn btn-outline-success">Yeni Masa Oluştur</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
