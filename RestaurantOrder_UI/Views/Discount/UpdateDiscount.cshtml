@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="UpdateDiscount">
                    <input type="hidden" asp-for="DiscountID"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürünü Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label>İndirim Oranı</label>
                                <input type="text" class="form-control" asp-for="Amount">
                            </div>
                            <div class="form-group">
                                <label>Ürün Resmi</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>

                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
