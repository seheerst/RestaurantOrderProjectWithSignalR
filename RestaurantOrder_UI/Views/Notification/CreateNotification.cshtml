@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="CreateNotification">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label>Tür</label>
                                <input type="text" class="form-control" asp-for="Type">
                            </div>
                            <div class="form-group">
                                <label>Icon</label>
                                <input type="text" class="form-control" asp-for="Icon">
                            </div>
                        </div>
                        <div class="card-action">

                            <button class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

